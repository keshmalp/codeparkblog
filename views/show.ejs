<% include partials/header %>

<div class="ui segment main text raised container"> 
    <div class="header ui huge"><%=blog.title%></div>
    <div class="ui top attached">
        <div class="item">
            <img src="<%= blog.image%>" class="ui centered rounded image"><br>
            <div class="content">
                <span><%=blog.created.toDateString()%></span>
            </div>
            <div class="description">
                <p id="text"><%- blog.body%></p>
                <!--<%- %> allows the data to be edited like we can add html or js and it will while accessing it-->
            </div>
        </div><br>
        <a href="/blogs/<%=blog._id%>/edit" class="ui basic button orange">Edit</a>
        <form id="delete" action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
        <button class="ui red button basic">Delete</button>
        </form>
    </div>
            
</div>
<% include partials/footer %>