<% include partials/header %>
<!--ui main text-->
<div class="ui segment main text raised container"> 
    <div class="header ui huge">Edit Blog</div>
    <form action="/blogs/<%=blog._id%>?_method=PUT" method="POST" class="ui form">
        <div class="field">
            <label>Title:</label>
            <input type = "text" value = "<%=blog.title%>" name="blog[title]">
        </div>
        <div class="field">
            <label>Image:</label>
            <input type = "text" value = "<%=blog.image%>" name="blog[image]">
        </div>
        <div class="field">
            <label>Blog Content:</label>
            <textarea name="blog[body]" required><%-blog.body%></textarea>    
        </div>
        
        
        <input type = "submit" class="ui black basic button">
    </form>
</div>

<% include partials/footer %>